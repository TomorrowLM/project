
#include <INTRINS.H>
#include <REGX52.H>

void Delay500ms()		//@12.000MHz
{
	unsigned char i, j, k;

	_nop_();
	i = 4;
	j = 205;
	k = 187;
	do
	{
		do
		{
			while (--k);
		} while (--j);
	} while (--i);
}

void main()
{
	while(1)
	{
		P1=0xFE;//1111 1110
		Delay500ms();
		P1=0xFD;
		Delay500ms();
		P1=0xFB;
		Delay500ms();
		P1=0xF7;
Delay500ms();
	}
}	